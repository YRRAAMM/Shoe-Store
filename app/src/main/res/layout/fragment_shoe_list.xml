<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <!-- to make the views aligned vertically in a single direction -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".screens.shoe.ShoeListFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            tools:ignore="ExtraText,SpeakableTextPresentCheck">

            <!-- to make the views aligned vertically in a single direction like listviews and recycler view to have the same feeling -->

            <LinearLayout
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addShoeFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/add_new_shoe"
            android:src="@drawable/ic_add"
            tools:ignore="ImageContrastCheck" />

    </LinearLayout>
</layout>